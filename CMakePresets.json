{
  "version": 10,
  "include": [
    "cmake/CMakePresets.base.json"
  ],
  "configurePresets": [
    {
      "name": "ci",
      "inherits": [
        "vcpkg",
        "default"
      ]
    },
    {
      "name": "mingw-x64",
      "inherits": [
        "mingw-x64-static",
        "default"
      ]
    },
    {
      "name": "mingw-x86",
      "inherits": [
        "mingw-x86-static",
        "default"
      ]
    }
  ],
  "buildPresets": [
    {
      "name": "all",
      "inherits": "default",
      "configurePreset": "ci",
      "configuration": "Debug"
    },
    {
      "name": "install",
      "inherits": "all"
    },
    {
      "name": "mingw-x64",
      "inherits": "default",
      "configurePreset": "mingw-x64",
      "configuration": "Debug",
      "targets": [
        "all"
      ]
    },
    {
      "name": "mingw-x86",
      "inherits": "default",
      "configurePreset": "mingw-x86",
      "configuration": "Debug",
      "targets": [
        "all"
      ]
    }
  ],
  "testPresets": [
    {
      "name": "ci",
      "inherits": "default",
      "configurePreset": "ci",
      "configuration": "Debug"
    }
  ],
  "packagePresets": [
    {
      "name": "ci",
      "inherits": "default",
      "configurePreset": "ci",
      "configurations": [
        "Debug"
      ]
    },
    {
      "name": "mingw-x64",
      "inherits": "default",
      "configurePreset": "mingw-x64",
      "configurations": [
        "Debug"
      ]
    },
    {
      "name": "mingw-x86",
      "inherits": "default",
      "configurePreset": "mingw-x86",
      "configurations": [
        "Debug"
      ]
    }
  ],
  "workflowPresets": [
    {
      "name": "ci",
      "steps": [
        {
          "type": "configure",
          "name": "ci"
        },
        {
          "type": "build",
          "name": "all"
        },
        {
          "type": "test",
          "name": "ci"
        },
        {
          "type": "package",
          "name": "ci"
        },
        {
          "type": "build",
          "name": "install"
        }
      ]
    }
  ]
}