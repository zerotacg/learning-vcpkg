{
  "version": 10,
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "binaryDir": "build/${presetName}",
      "installDir": "build/install/${presetName}",
      "cacheVariables": {
        "CMAKE_PREFIX_PATH": "${sourceDir}/build/install",
        "CMAKE_VERIFY_INTERFACE_HEADER_SETS": true
      }
    },
    {
      "name": "ninja",
      "hidden": true,
      "generator": "Ninja Multi-Config"
    },
    {
      "name": "vcpkg",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "mingw-x64-static",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/mingw-windows-x64.cmake",
        "BUILD_SHARED_LIBS": false
      }
    },
    {
      "name": "mingw-x86-static",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/mingw-windows-x86.cmake",
        "BUILD_SHARED_LIBS": false
      }
    },
    {
      "name": "mingw-x64",
      "inherits": [
        "mingw-x64-static",
        "default"
      ]
    },
    {
      "name": "mingw-x86",
      "inherits": [
        "mingw-x86-static",
        "default"
      ]
    },
    {
      "name": "ci",
      "inherits": [
        "vcpkg",
        "default"
      ]
    },
    {
      "name": "ci-x64-linux-dynamic",
      "inherits": [
        "vcpkg",
        "default"
      ],
      "binaryDir": "build/ci",
      "cacheVariables": {
        "BUILD_SHARED_LIBS": true,
        "VCPKG_TARGET_TRIPLET": "x64-linux-dynamic"
      }
    },
    {
      "name": "ci-mingw-x64",
      "inherits": [
        "ci"
      ],
      "cacheVariables": {
        "MINGW": true,
        "VCPKG_TARGET_TRIPLET": "x64-mingw-static",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/cmake/mingw-windows-x64.cmake"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "hidden": true,
      "configuration": "Release",
      "targets": [
        "${presetName}"
      ]
    },
    {
      "name": "all",
      "inherits": "default",
      "configurePreset": "ci",
      "configuration": "Debug"
    },
    {
      "name": "install",
      "inherits": "all"
    },
    {
      "name": "ci-mingw-x64",
      "inherits": "default",
      "configurePreset": "ci-mingw-x64",
      "configuration": "Debug",
      "targets": [
        "all"
      ]
    },
    {
      "name": "mingw-x86",
      "inherits": "default",
      "configurePreset": "mingw-x86",
      "configuration": "Debug",
      "targets": [
        "all"
      ]
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "hidden": true,
      "configuration": "Release",
      "output": {
        "outputOnFailure": true,
        "subprojectSummary": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": false
      }
    },
    {
      "name": "ci",
      "inherits": "default",
      "configurePreset": "ci",
      "configuration": "Debug"
    },
    {
      "name": "ci-mingw-x64",
      "inherits": "default",
      "configurePreset": "ci-mingw-x64",
      "configuration": "Debug"
    }
  ],
  "packagePresets": [
    {
      "name": "default",
      "hidden": true,
      "configurations": [
        "Release"
      ]
    },
    {
      "name": "ci",
      "inherits": "default",
      "configurePreset": "ci",
      "configurations": [
        "Debug"
      ]
    },
    {
      "name": "ci-mingw-x64",
      "inherits": "default",
      "configurePreset": "ci-mingw-x64",
      "configurations": [
        "Debug"
      ]
    },
    {
      "name": "mingw-x86",
      "inherits": "default",
      "configurePreset": "mingw-x86",
      "configurations": [
        "Debug"
      ]
    }
  ],
  "workflowPresets": [
    {
      "name": "ci",
      "steps": [
        {
          "type": "configure",
          "name": "ci"
        },
        {
          "type": "build",
          "name": "all"
        },
        {
          "type": "test",
          "name": "ci"
        },
        {
          "type": "package",
          "name": "ci"
        },
        {
          "type": "build",
          "name": "install"
        }
      ]
    },
    {
      "name": "ci-mingw-x64",
      "steps": [
        {
          "type": "configure",
          "name": "ci-mingw-x64"
        },
        {
          "type": "build",
          "name": "ci-mingw-x64"
        },
        {
          "type": "test",
          "name": "ci-mingw-x64"
        }
      ]
    },
    {
      "name": "ci-mingw-x86",
      "steps": [
        {
          "type": "configure",
          "name": "mingw-x86"
        },
        {
          "type": "build",
          "name": "mingw-x86"
        }
      ]
    }
  ]
}