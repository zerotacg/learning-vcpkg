{
  "version": 10,
  "configurePresets": [
    {
      "name": "default",
      "binaryDir": "build/${presetName}",
      "installDir": "build/install/${presetName}",
      "cacheVariables": {
        "CMAKE_PREFIX_PATH": "${sourceDir}/build/install"
      }
    },
    {
      "name": "ninja",
      "hidden": true,
      "generator": "Ninja Multi-Config"
    },
    {
      "name": "vcpkg",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "mingw-x64-static",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/mingw-windows-x64.cmake"
      }
    },
    {
      "name": "mingw-x86-static",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/mingw-windows-x86.cmake"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "hidden": true,
      "configuration": "Release",
      "targets": [
        "${presetName}"
      ]
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "hidden": true,
      "configuration": "Release",
      "output": {
        "outputOnFailure": true,
        "subprojectSummary": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": false
      }
    }
  ],
  "packagePresets": [
    {
      "name": "default",
      "hidden": true,
      "configurations": [
        "Release"
      ]
    }
  ]
}